{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  /* Banner layout fixes for Dawn (no Bootstrap) */
  .section-{{ section.id }}-padding.singleBnr {
    position: relative;
    min-height: 300px; /* adjust height */
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .section-{{ section.id }}-padding.singleBnr .container {
    position: relative;
    z-index: 2;
    width: min(1200px, 100%);
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .section-{{ section.id }}-padding.singleBnr .singleBnrImg {
    position: absolute;
    inset: 0;
    z-index: 1;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="singleBnr text-center d-flex flex-wrap justify-content-center align-items-end position-relative section-{{ section.id }}-padding">
  <div class="container position-relative z-index-2">
    <h1>
      
      {%- if section.settings.heading != blank -%}
        {{ section.settings.heading | escape }}
      {%- else -%}
        {{ page.title | escape }}
      {%- endif -%}
    </h1>

    {%- assign banner_desc = section.settings.description -%}
    {%- if banner_desc == blank and page.content != blank -%}
      {%- assign banner_desc = page.content -%}
    {%- endif -%}

    {%- if banner_desc != blank -%}
      {{ banner_desc }}
    {%- endif -%}
  </div>

  {%- if section.settings.bg_image != blank -%}
    <div
      class="singleBnrImg position-absolute top-0 start-0 w-100 h-100 bg-default"
      style="background-image:url({{ section.settings.bg_image | image_url: width: 2000 }});"
    >&nbsp;</div>
  {%- else -%}
    <div class="singleBnrImg position-absolute top-0 start-0 w-100 h-100 bg-default"></div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Main page (Banner)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Banner heading (leave empty to use page title)"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Banner description (leave empty to use page content)"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Banner background image"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
