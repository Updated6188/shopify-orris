{{ 'section-image-with-column.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign container_class = 'page-width'
  if section.settings.container == 'full'
    assign container_class = 'iwc-container--full'
  endif

  assign align_class = 'iwc-align-left'
  if section.settings.text_alignment == 'center'
    assign align_class = 'iwc-align-center'
  elsif section.settings.text_alignment == 'right'
    assign align_class = 'iwc-align-right'
  endif

  assign columns = section.settings.columns | default: 3
-%}

{%- style -%}
  .section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .section-{{ section.id }} .iwc-grid{
    gap: {{ section.settings.column_gap }}px;
  }

  @media (min-width: 990px){
    .section-{{ section.id }} .iwc-grid{
      grid-template-columns: repeat({{ columns }}, minmax(0, 1fr));
    }
  }
{%- endstyle -%}

<section class="section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="{{ container_class }}">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="iwc-header {{ align_class }}">
        {%- if section.settings.title != blank -%}
          <h2 class="iwc-title">{{ section.settings.title | escape }}</h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="iwc-desc rte">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="iwc-grid{% if section.settings.stack_on_mobile %} iwc-stack-mobile{% endif %}">
      {%- for block in section.blocks -%}
        {%- liquid
          assign desktop_img = block.settings.image_desktop
          assign mobile_img  = block.settings.image_mobile
          assign link_url    = block.settings.link

          capture sizes_str
            echo '(min-width: 990px) calc((100vw - 120px) / '
            echo columns
            echo '), 50vw'
          endcapture
        -%}

        <div class="iwc-item" {{ block.shopify_attributes }}>
          {%- if link_url != blank -%}
            <a class="iwc-link" href="{{ link_url }}" aria-label="{{ block.settings.link_label | escape }}">
          {%- endif -%}

          <div class="iwc-media iwc-media--{{ section.settings.image_ratio }}">
            {%- if desktop_img != blank -%}
              <picture>
                {%- if mobile_img != blank -%}
                  <source
                    media="(max-width: 767px)"
                    srcset="
                      {{ mobile_img | image_url: width: 360 }} 360w,
                      {{ mobile_img | image_url: width: 540 }} 540w,
                      {{ mobile_img | image_url: width: 750 }} 750w,
                      {{ mobile_img | image_url: width: 900 }} 900w
                    "
                    sizes="100vw"
                  >
                {%- endif -%}

                {{
                  desktop_img
                  | image_url: width: 2000
                  | image_tag:
                      loading: 'lazy',
                      widths: '375, 550, 750, 1100, 1500, 2000',
                      sizes: sizes_str,
                      class: 'iwc-img',
                      alt: desktop_img.alt
                }}
              </picture>
            {%- else -%}
              <div class="iwc-placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
          </div>

          {%- if link_url != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with Columns",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Image with Columns"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignment (title + description)",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Number of columns",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "column_gap",
      "label": "Column gap",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image height",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adaptive" },
        { "value": "square", "label": "1:1" },
        { "value": "portrait", "label": "2:3" }
      ]
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container",
      "default": "page",
      "options": [
        { "value": "page", "label": "Page width" },
        { "value": "full", "label": "Full width" }
      ]
    },
    {
      "type": "checkbox",
      "id": "stack_on_mobile",
      "label": "Stack images on mobile",
      "default": true
    },
    {
      "type": "header",
      "content": "Section spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile image (below 767px)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (product/collection/page or custom URL)"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label (for accessibility)",
          "default": "Open link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Columns",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}