        { "type": "richtext", "id": "a5", "label": "Answer 5", "default": "<p>Answer 5</p>" },

        { "type": "text", "id": "q6", "label": "Question 6", "default": "Question 6" },
        { "type": "richtext", "id": "a6", "label": "Answer 6", "default": "<p>Answer 6</p>" },

