{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Layout */
  .privacyPg.section-{{ section.id }}-padding .policy_pages{
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 990px){
    .privacyPg.section-{{ section.id }}-padding .policy_pages{
      grid-template-columns: 380px 1fr;
      align-items: start;
    }
  }
.privacyPg.section-{{ section.id }}-padding .sideNav { border: 1px solid #dcdcdc; }
.privacyPg.section-{{ section.id }}-padding .sideNav ul { width: 100%; float: left; padding: 0; margin:0; list-style: none;  }
.privacyPg.section-{{ section.id }}-padding .sideNav ul li {
  border-bottom: 1px solid #dcdcdc;
  width: 100%;
  float: left;
}
  .privacyPg.section-{{ section.id }}-padding .sideNav ul li a { display: block; font-family: var(--outfit); font-weight: 300; font-size: 16px; color: var(--black); padding: 12px 28px 13px; text-decoration: none; text-transform: uppercase; letter-spacing: 1px; text-decoration: none;}

  .privacyPg.section-{{ section.id }}-padding .sideNav ul li a:hover,
  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.current-menu-item > a,
  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.is-active > a{
    background: var(--brownColor); color: var(--white);
  }

.privacyRight {}
.privacyRight h1 { font-size:30px; margin-bottom: 15px; margin-top: 0; float: left; width: 100%; text-transform: uppercase; }
.privacyRight h2 { font-size:22px; text-transform:capitalize; margin-bottom: 10px; margin-top: 25px; float: left; width: 100%;}
.privacyRight p { font-size:16px; line-height:1.4; margin-bottom: 15px; }

.privacyRight ul { padding-left:15px; }
.privacyRight ul li { font-size:16px; line-height:1.4; margin-bottom:20px; list-style:decimal; }
.privacyRight ul li:last-child { margin-bottom: 0; }


  /* FAQ styles */
  /* FAQ accordion like screenshot */
.privacyPg.section-{{ section.id }}-padding .faq-group{
  /*margin-top: 22px;*/
}

.privacyPg.section-{{ section.id }}-padding .faq-accordion{
  border-top: 1px solid rgba(0,0,0,.12);
}

.privacyPg.section-{{ section.id }}-padding .faq-item{
  border-bottom: 1px solid rgba(0,0,0,.12);
  padding: 0;
  margin: 0;
}

.privacyPg.section-{{ section.id }}-padding .faq-summary{
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 18px 0;
  cursor: pointer;
  list-style: none;
}

.privacyPg.section-{{ section.id }}-padding .faq-summary::-webkit-details-marker{
  display:none;
}

.privacyPg.section-{{ section.id }}-padding .faq-question{
  font-size: 20px;
  line-height: 1.35;
  font-weight: 500; color:#000;
}

@media (max-width: 749px){
  .privacyPg.section-{{ section.id }}-padding .faq-question{
    font-size: 18px;
  }
}

.privacyPg.section-{{ section.id }}-padding .faq-icon{
  width: 18px;
  height: 18px;
  position: relative;
  flex: 0 0 18px;
}

/* plus sign */
.privacyPg.section-{{ section.id }}-padding .faq-icon:before,
.privacyPg.section-{{ section.id }}-padding .faq-icon:after{
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 18px;
  height: 2px;
  background: rgba(0,0,0,.9);
  transform: translate(-50%, -50%);
}

/* vertical line of plus */
.privacyPg.section-{{ section.id }}-padding .faq-icon:after{
  width: 2px;
  height: 18px;
}

/* when open -> turn plus into minus */
.privacyPg.section-{{ section.id }}-padding details[open] .faq-icon:after{
  height: 0;
}

/* answer spacing */
.privacyPg.section-{{ section.id }}-padding .faq-content{
  padding: 0 0 18px 0;
  max-width: 100%;
}
.privacyPg.section-{{ section.id }}-padding .faq-content p { margin-bottom:15px;}

{%- endstyle -%}

<section class="privacyPg page-width section-{{ section.id }}-padding">
  <div class="policy_pages">

    <!-- LEFT SIDEBAR -->
    <aside class="policy_left">
      <div class="sideNav float-start w-100">
        <ul>
          {%- if section.settings.nav_menu != blank -%}
            {%- for link in section.settings.nav_menu.links -%}
              {%- assign is_active = false -%}
              {%- if link.url == page.url -%}{%- assign is_active = true -%}{%- endif -%}

              <li class="menu-item menu-item-type-post_type menu-item-object-page{% if is_active %} current-menu-item current_page_item is-active{% endif %}">
                <a href="{{ link.url }}" {% if is_active %}aria-current="page"{% endif %}>
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          {%- else -%}
            <li class="menu-item"><a href="#">Select a menu in section settings</a></li>
          {%- endif -%}
        </ul>
      </div>
    </aside>

    <!-- RIGHT CONTENT -->
    <div class="privacyRight">

      {%- if section.settings.show_page_title -%}
        <h1>
          {%- if section.settings.custom_title != blank -%}
            {{ section.settings.custom_title | escape }}
          {%- else -%}
            {{ page.title | escape }}
          {%- endif -%}
        </h1>
      {%- endif -%}

      <!-- Page content ALWAYS shows -->
      <div class="rte">
        {{ page.content }}
      </div>

      <!-- FAQ repeater -->
      {%- if section.blocks.size > 0 -%}
        <div class="faq-group">
            <div class="faq-accordion">
            {%- for block in section.blocks -%}
                {%- if block.type == 'faq_item' -%}
                {%- assign q = block.settings.question | strip -%}
                {%- assign a_plain = block.settings.answer | strip_html | strip -%}

                {%- if q != blank or a_plain != blank -%}
                    <details class="faq-item" {{ block.shopify_attributes }}>
                    <summary class="faq-summary">
                        <span class="faq-question">{{ q | default: 'FAQ' | escape }}</span>
                        <span class="faq-icon" aria-hidden="true"></span>
                    </summary>

                    {%- if a_plain != blank -%}
                        <div class="faq-content rte">
                        {{ block.settings.answer }}
                        </div>
                    {%- endif -%}
                    </details>
                {%- endif -%}
                {%- endif -%}
            {%- endfor -%}
            </div>
        </div>
        {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sidebar page",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "link_list", "id": "nav_menu", "label": "Left sidebar menu" },
    { "type": "checkbox", "id": "show_page_title", "label": "Show page title", "default": true },
    { "type": "text", "id": "custom_title", "label": "Custom title (optional)" },
    { "type": "header", "content": "Padding" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Top padding", "default": 100 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Bottom padding", "default": 100 }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ item",
      "settings": [
        { "type": "text", "id": "question", "label": "Question", "default": "-" },
        { "type": "richtext", "id": "answer", "label": "Answer", "default": "<p>-</p>" }
      ]
    }
  ],
  "presets": [
    { "name": "Sidebar page" }
  ]
}
{% endschema %}
