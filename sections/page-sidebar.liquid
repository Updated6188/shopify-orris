{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Layout */
  .privacyPg.section-{{ section.id }}-padding .policy_pages{
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 990px){
    .privacyPg.section-{{ section.id }}-padding .policy_pages{
      grid-template-columns: 300px 1fr;
      align-items: start;
    }
  }

  /* Sidebar */
  .privacyPg.section-{{ section.id }}-padding .sideNav{
    position: sticky;
    top: 16px;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul{
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul li a{
    display: block;
    padding: 12px 12px;
    text-decoration: none;
    color: inherit;
    border-radius: 10px;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.current-menu-item > a,
  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.is-active > a{
    background: rgba(0,0,0,.06);
    font-weight: 600;
  }

  /* Right content spacing */
  .privacyPg.section-{{ section.id }}-padding .privacyRight .block-gap{
    margin-top: 18px;
  }
  .privacyPg.section-{{ section.id }}-padding .privacyRight .block-gap:first-child{
    margin-top: 0;
  }

  /* FAQ / Collapsible */
  .privacyPg.section-{{ section.id }}-padding .faq-wrap details{
    border: 1px solid rgba(0,0,0,.10);
    border-radius: 12px;
    padding: 12px 14px;
    background: rgb(var(--color-background));
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap details + details{
    margin-top: 10px;
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap summary{
    cursor: pointer;
    font-weight: 600;
    list-style: none;
    outline: none;
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap summary::-webkit-details-marker{
    display:none;
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap .faq-content{
    margin-top: 10px;
  }
{%- endstyle -%}

<section class="privacyPg page-width section-{{ section.id }}-padding">
  <div class="policy_pages">

    <!-- LEFT SIDEBAR -->
    <aside class="policy_left">
      <div class="sideNav float-start w-100">
        <ul>
          {%- if section.settings.nav_menu != blank -%}
            {%- for link in section.settings.nav_menu.links -%}
              {%- assign is_active = false -%}
              {%- if link.url == page.url -%}{%- assign is_active = true -%}{%- endif -%}

              <li class="menu-item menu-item-type-post_type menu-item-object-page{% if is_active %} current-menu-item current_page_item is-active{% endif %}">
                <a href="{{ link.url }}" {% if is_active %}aria-current="page"{% endif %}>
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          {%- else -%}
            <li class="menu-item">
              <a href="#">Select a menu in section settings</a>
            </li>
          {%- endif -%}
        </ul>
      </div>
    </aside>

    <!-- RIGHT CONTENT -->
    <div class="privacyRight">

      {%- if section.settings.show_page_title -%}
        <h1>
          {%- if section.settings.custom_title != blank -%}
            {{ section.settings.custom_title | escape }}
          {%- else -%}
            {{ page.title | escape }}
          {%- endif -%}
        </h1>
      {%- endif -%}

      <!-- Page content ALWAYS shows -->
      <div class="rte">
        {{ page.content }}
      </div>

      <!-- Extra blocks (optional) -->
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          <div class="block-gap" {{ block.shopify_attributes }}>
            {%- case block.type -%}

              {%- when 'rich_text' -%}
                <div class="rte">
                  {{ block.settings.content }}
                </div>

              {%- when 'image' -%}
                {%- if block.settings.image != blank -%}
                  <div>
                    {{
                      block.settings.image
                      | image_url: width: 1800
                      | image_tag: loading: 'lazy'
                    }}
                  </div>
                {%- endif -%}

              {%- when 'faq' -%}
                <div class="faq-wrap">
                  {%- if block.settings.faq_title != blank -%}
                    <h2>{{ block.settings.faq_title | escape }}</h2>
                  {%- endif -%}

                  {%- for i in (1..8) -%}
                    {%- assign q_key = 'q' | append: i -%}
                    {%- assign a_key = 'a' | append: i -%}
                    {%- assign q_val = block.settings[q_key] -%}
                    {%- assign a_val = block.settings[a_key] -%}

                    {%- if q_val != blank and a_val != blank -%}
                      <details>
                        <summary>{{ q_val | escape }}</summary>
                        <div class="faq-content rte">
                          {{ a_val }}
                        </div>
                      </details>
                    {%- endif -%}
                  {%- endfor -%}
                </div>

              {%- when 'divider' -%}
                <hr>

            {%- endcase -%}
          </div>
        {%- endfor -%}
      {%- endif -%}

    </div>

  </div>
</section>

{% schema %}
