{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .page-sidebar-wrap-{{ section.id }}{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .page-sidebar-wrap-{{ section.id }}{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .page-sidebar-{{ section.id }}{
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media screen and (min-width: 990px){
    .page-sidebar-{{ section.id }}{
      grid-template-columns: 280px 1fr;
      align-items: start;
    }
  }

  .page-sidebar__nav-{{ section.id }}{
    position: sticky;
    top: 16px;
    border: 1px solid rgba(0,0,0,.08);
    border-radius: 12px;
    padding: 14px;
    background: rgb(var(--color-background));
  }

  .page-sidebar__title-{{ section.id }}{
    margin: 0 0 10px;
    font-size: 16px;
    font-weight: 600;
  }

  .page-sidebar__links-{{ section.id }}{
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .page-sidebar__links-{{ section.id }} li + li{
    margin-top: 6px;
  }

  .page-sidebar__links-{{ section.id }} a{
    display: block;
    padding: 10px 10px;
    border-radius: 10px;
    text-decoration: none;
    color: inherit;
  }

  .page-sidebar__links-{{ section.id }} a[aria-current="page"],
  .page-sidebar__links-{{ section.id }} a.is-active{
    background: rgba(0,0,0,.06);
    font-weight: 600;
  }

  .page-sidebar__content-{{ section.id }}{
    border: 1px solid rgba(0,0,0,.08);
    border-radius: 12px;
    padding: 18px;
    background: rgb(var(--color-background));
  }

  .page-sidebar__content-{{ section.id }} .rte{
    margin-top: 12px;
  }
{%- endstyle -%}

<div class="page-width page-sidebar-wrap-{{ section.id }}">
  <div class="page-sidebar-{{ section.id }}">
    <!-- Left Nav -->
    <aside class="page-sidebar__nav-{{ section.id }}">
      {%- if section.settings.nav_title != blank -%}
        <p class="page-sidebar__title-{{ section.id }}">{{ section.settings.nav_title | escape }}</p>
      {%- endif -%}

      {%- if section.settings.nav_menu != blank -%}
        <ul class="page-sidebar__links-{{ section.id }}">
          {%- for link in section.settings.nav_menu.links -%}
            {%- assign active = false -%}
            {%- if link.url == page.url -%}{%- assign active = true -%}{%- endif -%}

            <li>
              <a
                href="{{ link.url }}"
                {% if active %}class="is-active" aria-current="page"{% endif %}
              >
                {{ link.title | escape }}
              </a>

              {%- if section.settings.show_children and link.links.size > 0 -%}
                <ul class="page-sidebar__links-{{ section.id }}" style="margin-top:8px; margin-left:10px;">
                  {%- for child in link.links -%}
                    {%- assign child_active = false -%}
                    {%- if child.url == page.url -%}{%- assign child_active = true -%}{%- endif -%}
                    <li>
                      <a href="{{ child.url }}" {% if child_active %}class="is-active" aria-current="page"{% endif %}>
                        {{ child.title | escape }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      {%- else -%}
        <p class="rte">Select a menu from section settings.</p>
      {%- endif -%}
    </aside>

    <!-- Right Content -->
    <main class="page-sidebar__content-{{ section.id }}">
      <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        {%- if section.settings.heading != blank -%}
          {{ section.settings.heading | escape }}
        {%- else -%}
          {{ page.title | escape }}
        {%- endif -%}
      </h1>

      <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {%- if section.settings.custom_content != blank -%}
          {{ section.settings.custom_content }}
        {%- else -%}
          {{ page.content }}
        {%- endif -%}
      </div>
    </main>
  </div>
</div>

{% schema %}
{
  "name": "Page with left sidebar",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Custom heading (optional)"
    },
    {
      "type": "richtext",
      "id": "custom_content",
      "label": "Custom content (optional, overrides page content)"
    },
    {
      "type": "text",
      "id": "nav_title",
      "label": "Sidebar title",
      "default": "Help Center"
    },
    {
      "type": "link_list",
      "id": "nav_menu",
      "label": "Sidebar menu"
    },
    {
      "type": "checkbox",
      "id": "show_children",
      "label": "Show dropdown children links",
      "default": true
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Page with left sidebar"
    }
  ]
}
{% endschema %}
