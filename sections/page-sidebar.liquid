{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Layout */
  .privacyPg.section-{{ section.id }}-padding .policy_pages{
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 990px){
    .privacyPg.section-{{ section.id }}-padding .policy_pages{
      grid-template-columns: 300px 1fr;
      align-items: start;
    }
  }

  /* Sidebar */
  .privacyPg.section-{{ section.id }}-padding .sideNav{
    position: sticky;
    top: 16px;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul{
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul li a{
    display: block;
    padding: 12px 12px;
    text-decoration: none;
    color: inherit;
    border-radius: 10px;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.current-menu-item > a,
  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.is-active > a{
    background: rgba(0,0,0,.06);
    font-weight: 600;
  }

  /* FAQ styles */
  .privacyPg.section-{{ section.id }}-padding .faq-group{
    margin-top: 22px;
  }

  .privacyPg.section-{{ section.id }}-padding .faq-wrap details{
    border: 1px solid rgba(0,0,0,.10);
    border-radius: 12px;
    padding: 12px 14px;
    background: rgb(var(--color-background));
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap details + details{
    margin-top: 10px;
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap summary{
    cursor: pointer;
    font-weight: 600;
    list-style: none;
    outline: none;
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap summary::-webkit-details-marker{
    display:none;
  }
  .privacyPg.section-{{ section.id }}-padding .faq-wrap .faq-content{
    margin-top: 10px;
  }
{%- endstyle -%}

<section class="privacyPg page-width section-{{ section.id }}-padding">
  <div class="policy_pages">

    <!-- LEFT SIDEBAR -->
    <aside class="policy_left">
      <div class="sideNav float-start w-100">
        <ul>
          {%- if section.settings.nav_menu != blank -%}
            {%- for link in section.settings.nav_menu.links -%}
              {%- assign is_active = false -%}
              {%- if link.url == page.url -%}{%- assign is_active = true -%}{%- endif -%}

              <li class="menu-item menu-item-type-post_type menu-item-object-page{% if is_active %} current-menu-item current_page_item is-active{% endif %}">
                <a href="{{ link.url }}" {% if is_active %}aria-current="page"{% endif %}>
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          {%- else -%}
            <li class="menu-item"><a href="#">Select a menu in section settings</a></li>
          {%- endif -%}
        </ul>
      </div>
    </aside>

    <!-- RIGHT CONTENT -->
    <div class="privacyRight">

      {%- if section.settings.show_page_title -%}
        <h1>
          {%- if section.settings.custom_title != blank -%}
            {{ section.settings.custom_title | escape }}
          {%- else -%}
            {{ page.title | escape }}
          {%- endif -%}
        </h1>
      {%- endif -%}

      <!-- Page content ALWAYS shows -->
      <div class="rte">
        {{ page.content }}
      </div>

      <!-- FAQ repeater -->
      {%- if section.blocks.size > 0 -%}
  <div class="faq-group">
    <div class="faq-wrap">
      {%- for block in section.blocks -%}
        {%- if block.type == 'faq_item' -%}
          {%- assign q_clean = block.settings.question | strip -%}
          {%- assign a_plain = block.settings.answer | strip_html | strip -%}

          {%- if q_clean != blank and q_clean != '-' and a_plain != blank and a_plain != '-' -%}
            <details {{ block.shopify_attributes }}>
              <summary>{{ q_clean | escape }}</summary>
              <div class="faq-content rte">
                {{ block.settings.answer }}
              </div>
            </details>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}


    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sidebar page",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "link_list", "id": "nav_menu", "label": "Left sidebar menu" },
    { "type": "checkbox", "id": "show_page_title", "label": "Show page title", "default": true },
    { "type": "text", "id": "custom_title", "label": "Custom title (optional)" },
    { "type": "header", "content": "Padding" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Top padding", "default": 100 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Bottom padding", "default": 100 }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ item",
      "settings": [
        { "type": "text", "id": "question", "label": "Question", "default": "-" },
        { "type": "richtext", "id": "answer", "label": "Answer", "default": "<p>-</p>" }
      ]
    }
  ],
  "presets": [
    { "name": "Sidebar page" }
  ]
}
{% endschema %}
