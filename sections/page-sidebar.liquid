{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Layout: left sidebar + right content */
  .privacyPg.section-{{ section.id }}-padding .policy_pages{
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 990px){
    .privacyPg.section-{{ section.id }}-padding .policy_pages{
      grid-template-columns: 300px 1fr;
      align-items: start;
    }
  }

  /* Sidebar */
  .privacyPg.section-{{ section.id }}-padding .sideNav{
    position: sticky;
    top: 16px;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul{
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul li a{
    display: block;
    padding: 12px 12px;
    text-decoration: none;
    color: inherit;
    border-radius: 10px;
  }

  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.current-menu-item > a,
  .privacyPg.section-{{ section.id }}-padding .sideNav ul li.is-active > a{
    background: rgba(0,0,0,.06);
    font-weight: 600;
  }

  /* Right content spacing */
  .privacyPg.section-{{ section.id }}-padding .privacyRight .block-gap{
    margin-top: 16px;
  }

  .privacyPg.section-{{ section.id }}-padding .privacyRight .block-gap:first-child{
    margin-top: 0;
  }
{%- endstyle -%}

<section class="privacyPg page-width section-{{ section.id }}-padding">
  <div class="policy_pages">

    <!-- LEFT SIDEBAR -->
    <aside class="policy_left">
      <div class="sideNav float-start w-100">
        <ul>
          {%- if section.settings.nav_menu != blank -%}
            {%- for link in section.settings.nav_menu.links -%}
              {%- assign is_active = false -%}
              {%- if link.url == page.url -%}{%- assign is_active = true -%}{%- endif -%}

              <li class="menu-item menu-item-type-post_type menu-item-object-page{% if is_active %} current-menu-item current_page_item is-active{% endif %}">
                <a href="{{ link.url }}" {% if is_active %}aria-current="page"{% endif %}>
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          {%- else -%}
            <li class="menu-item">
              <a href="#">Select a menu in section settings</a>
            </li>
          {%- endif -%}
        </ul>
      </div>
    </aside>

    <!-- RIGHT CONTENT (blocks area) -->
    <div class="privacyRight">
      {%- if section.settings.show_page_title -%}
        <h1>
          {%- if section.settings.custom_title != blank -%}
            {{ section.settings.custom_title | escape }}
          {%- else -%}
            {{ page.title | escape }}
          {%- endif -%}
        </h1>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          <div class="block-gap" {{ block.shopify_attributes }}>
            {%- case block.type -%}

              {%- when 'page_content' -%}
                <div class="rte">
                  {{ page.content }}
                </div>

              {%- when 'rich_text' -%}
                <div class="rte">
                  {{ block.settings.content }}
                </div>

              {%- when 'title' -%}
                <h2{% if block.settings.heading_class != blank %} class="{{ block.settings.heading_class }}"{% endif %}>
                  {{ block.settings.heading | escape }}
                </h2>

              {%- when 'image' -%}
                {%- if block.settings.image != blank -%}
                  <div>
                    {{
                      block.settings.image
                      | image_url: width: 1800
                      | image_tag: loading: 'lazy'
                    }}
                  </div>
                {%- endif -%}

              {%- when 'divider' -%}
                <hr>

            {%- endcase -%}
          </div>
        {%- endfor -%}
      {%- else -%}
        <div class="rte">
          {{ page.content }}
        </div>
      {%- endif -%}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Privacy sidebar page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "link_list",
      "id": "nav_menu",
      "label": "Left sidebar menu"
    },
    {
      "type": "checkbox",
      "id": "show_page_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "text",
      "id": "custom_title",
      "label": "Custom title (optional)"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "page_content",
      "name": "Page content"
    },
    {
      "type": "rich_text",
      "name": "Rich text",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    },
    {
      "type": "title",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Section title"
        },
        {
          "type": "text",
          "id": "heading_class",
          "label": "Heading class (optional)"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "divider",
      "name": "Divider"
    }
  ],
  "presets": [
    {
      "name": "Privacy sidebar page",
      "blocks": [
        { "type": "page_content" }
      ]
    }
  ]
}
{% endschema %}
