{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Center content */
  .collection-hero.collection-hero--bg .collection-hero__inner {
    position: relative;
    min-height: 320px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .collection-hero.collection-hero--bg .collection-hero__inner {
      min-height: 420px;
    }
  }

  /* Background image layer */
  .collection-hero.collection-hero--bg .collection-hero__bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  /* Optional overlay for readability (adjust opacity if needed) */
  .collection-hero.collection-hero--bg .collection-hero__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,.28);
  }

  /* Keep text above background */
  .collection-hero.collection-hero--bg .collection-hero__text-wrapper {
    position: relative;
    z-index: 2;
    max-width: 900px;
    margin: 0 auto;
  }

  /* If no bg image, keep normal padding behavior */
  .collection-hero:not(.collection-hero--bg) .collection-hero__inner {
    text-align: center;
  }

  /* Mobile padding (keep your existing logic, but for bg too) */
  @media screen and (max-width: 749px) {
    .collection-hero.collection-hero--bg .collection-hero__inner {
      padding-top: 3rem;
      padding-bottom: calc({{ settings.media_shadow_vertical_offset | at_least: 0 }}px + 3rem);
    }
  }
{%- endstyle -%}

{%- assign use_bg = false -%}
{%- if section.settings.show_collection_image and collection.image -%}
  {%- assign use_bg = true -%}
{%- endif -%}

<div
  class="collection-hero{% if use_bg %} collection-hero--bg{% endif %} color-{{ section.settings.color_scheme }} gradient"
  {% if use_bg %}
    style="--collection-hero-bg: url({{ collection.image | image_url: width: 2000 }});"
  {% endif %}
>
  {%- if use_bg -%}
    <div
      class="collection-hero__bg"
      style="background-image: var(--collection-hero-bg);"
      aria-hidden="true"
    ></div>
    <div class="collection-hero__overlay" aria-hidden="true"></div>
  {%- endif -%}

  <div class="collection-hero__inner page-width {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <div class="collection-hero__text-wrapper">
      <h1 class="collection-hero__title">
        <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
        {{- collection.title | escape -}}
      </h1>

      {%- if section.settings.show_collection_description -%}
        <div class="collection-hero__description rte">
          {{ collection.description }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
