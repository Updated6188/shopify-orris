{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{% comment %} {{ 'component-collection-hero.css' | asset_url | stylesheet_tag }} {% endcomment %}
{{ 'section-main-page.css' | asset_url | stylesheet_tag: preload: true }}

{%- assign bg_image = nil -%}

{%- if section.settings.show_collection_image and collection.image -%}
  {%- assign bg_image = collection.image -%}
{%- endif -%}

<section class="singleBnr text-center d-flex flex-wrap justify-content-center align-items-end position-relative section-{{ section.id }}-padding">
  <div class="container position-relative z-index-2">
    <h1>
      <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
      {{ collection.title | escape }}
    </h1>

    {%- if section.settings.show_collection_description -%}
      {%- if collection.description != blank -%}
          {{ collection.description }}
      {%- endif -%}
    {%- endif -%}
  </div>

  {%- if bg_image != blank -%}
    <div
      class="singleBnrImg position-absolute top-0 start-0 w-100 h-100 bg-default"
      style="background-image:url({{ bg_image | image_url: width: 2000 }});"
      aria-hidden="true"
    >&nbsp</div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
